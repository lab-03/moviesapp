<div id="<%= dom_id movie %>" class="w-full md:w-1/3 px-6 mb-4">
  <div class="border p-4 rounded-lg shadow-md">
    <h1 class="text-lg font-semibold mb-2 text-center">
      <strong>  <%= movie.name %> </strong>
    </h1>
    <div class="mb-4">
      <p class="mb-2"><%= movie.description %></p>
    </div>
    <div class="flex justify-between text-sm mb-2">
      <p><strong>Year:</strong> <%= movie.year %></p>
    </div>
    <div class="flex justify-between text-sm mb-2">
      <p><strong>Director:</strong> <%= movie.director_names %></p>
    </div>
    <div class="flex justify-between text-sm">
      <p><strong>Actors:</strong> <%= movie.actor_names %></p>
    </div>
    <div class="flex justify-between text-sm">
      <p><strong>Countries:</strong> <%= movie.country_names %></p>
    </div>
    <div class="mt-2">
      <strong>Locations:</strong>
      <ul class="list-disc list-inside">
        <% movie.locations.each do |location| %>
          <li><%= location.name %></li>
        <% end %>
      </ul>
    </div>
  </div>
</div>
